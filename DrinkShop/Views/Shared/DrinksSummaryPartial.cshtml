@using DrinkShop.Web
@model Drink

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@Model.ImageThumbnail" alt="" />
        <div class="caption">
            <h3 class="pull-right">@Model.Price.ToString("c")</h3>
            <h3>
                <a asp-controller="Drink" asp-action="Details" asp-route-drinkId="@Model.DrinkId">@Model.Name</a>
            </h3>
            <p>@Model.ShortDescription</p>
        </div>
        <div class="addToCart text-right">

            <a class="btn btn-success" id="cartButton" asp-controller="ShoppingCart"
               asp-action="AddToCart"
               asp-route-drinkId="@Model.DrinkId">
                Add to cart
            </a>
            @if (User.IsInRole(WebConstants.AdministratorRole))
            {
                <a class="btn btn-warning" id="editButton" asp-area="admin" asp-controller="DrinksManage"
                   asp-action="Edit"
                   asp-route-id="@Model.DrinkId">
                    Edit
                </a>
                <a class="btn btn-danger" id="removeButton" asp-area="admin" asp-controller="DrinksManage"
                   asp-action="Remove"
                   asp-route-id="@Model.DrinkId">
                    Remove
                </a>
            }
        </div>

    </div>

</div>
